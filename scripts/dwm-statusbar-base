#!/bin/bash

default_todo_file="$HOME/docs/todo.txt"
todo_file="${TODO_FILE_PATH:=$default_todo_file}"

while true; do
        disk_usage="$(df -ht ext4 | rg /dev/sda2 | rg -o '[^ ]*[GM] *[0-9]*%')"
        todo_str="todo($(wc -l < "$todo_file")): $(head --lines 1 "$todo_file")"
        timetable_cli_status="$(timetable-cli --combine-title-and-variation -S)"
        if [[ -z $(pgrep newsboat) ]]; then
            rss="$(newsboat -x print-unread | rg -o '[0-9]*')"
        else
            rss="?"
        fi
        xsetroot -name " [$timetable_cli_status] | $todo_str | rss: $rss | $disk_usage | $(uname -r) | $(date +'%a %F %R')"
        sleep 5
done
